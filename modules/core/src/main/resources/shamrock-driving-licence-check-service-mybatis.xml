<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
    </typeAliases>

    <typeHandlers>
        <typeHandler javaType="org.joda.time.LocalDate" handler="com.haulmont.monaco.mybatis.type.LocalDateTypeHandler"/>
        <typeHandler javaType="org.joda.time.DateTime" handler="com.haulmont.monaco.mybatis.type.DateTimeTypeHandler"/>
        <typeHandler javaType="java.util.UUID" handler="com.haulmont.monaco.mybatis.type.UUIDTypeHandler"/>
    </typeHandlers>

    <environments default="SHAMROCK">
        <environment id="SHAMROCK">
            <transactionManager type="JDBC"/>
            <dataSource type="com.haulmont.monaco.mybatis.DataSourceFactory">
                <property name="ds-name" value="shamrock-ds"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="com/haulmont/shamrock/driving/licence/check/mappers/DriverProfileMapper.xml"/>
    </mappers>
</configuration>